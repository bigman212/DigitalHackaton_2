<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnSurface">@color/asphalt</item>
        <item name="android:textColor">@color/night</item>
        <item name="android:textColorSecondary">@color/night</item>
        <item name="colorError">@color/red</item>
    </style>

    <style name="LoginField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlNormal">@color/asphalt</item>
        <item name="android:textColorHint">@color/asphalt</item>
        <item name="colorControlActivated">@color/azure</item>
        <item name="android:textAppearance">@style/ProximaSubtitle1</item>
        <item name="textAppearanceSubtitle1">@style/ProximaSubtitle1</item>
    </style>

    <style name="BottomNavigation.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/proxima_nova_reg</item>
    </style>

</resources>
